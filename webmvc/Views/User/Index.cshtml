@model Epiworx.WebMvc.Models.UserListModel
@using Epiworx.WebMvc.Helpers
<div class="hgroup">
    <img src="@Url.Content("~/Content/user.png")" />
    <h2>
        Users</h2>
</div>
<ul class="filter">
    <li><strong>Filters</strong></li>
    <li class="selected"><a href="" data-filter="Active">Active</a></li>
    <li><a href="" data-filter="Inactive">Inactive</a></li>
    <li><a href="" data-filter="Archived">Archived</a></li>
</ul>
<table class="users">
    <thead>
        <tr>
            <th style="width: 300px;">
                Name
            </th>
            <th>
                Status
            </th>
            <th class="number">
                Pending<br />
                Stories
            </th>
            <th class="number">
                Open<br />
                Stories
            </th>
            <th class="number">
                Duration
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        { 
            <tr data-active="@user.IsActive" data-archived="@user.IsArchived">
                <td>@Html.ActionLink(user.Name, "Details", new { id = user.UserId })
                </td>
                <td>
                    @if (Model.Timelines.Count() != 0)
                    {
                        var timelines = Model.Timelines
                            .Where(timeline => timeline.SourceId == user.UserId)
                            .OrderByDescending(timeline => timeline.CreatedDate);

                        if (timelines.Count() != 0)
                        {
                            var timeline = timelines.First();
                        <div class="note">
                            <p title="@timeline.Body">
                                @timeline.Body
                            </p>
                            @Html.Gravatar(timeline.CreatedByEmail, timeline.CreatedByName)
                            <strong class="user">
                                @timeline.CreatedByName</strong><span class="date">@Html.ToRelativeDate(timeline.CreatedDate)</span>
                        </div>
                        }
                    }
                </td>
                <td class="number">
                    <a href="@Url.Action("List", "Story", new { userId = user.UserId, isOpened = "False", isArchived = "False" })">@Model.Stories.Count(row => row.AssignedTo == user.UserId
                    && !row.IsOpened)</a>
                </td>
                <td class="number">
                    <a href="@Url.Action("List", "Story", new { userId = user.UserId, isOpened = "True", isArchived = "False" })">@Model.Stories.Count(row => row.AssignedTo == user.UserId
                    && row.IsOpened)</a>
                </td>
                <td class="number">@Model.Stories.Where(row => row.AssignedTo == user.UserId
                    && row.IsOpened).Sum(row => row.Duration)
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="2">
                Total
            </td>
            <td class="number">
                <a href="@Url.Action("List", "Story", new { isOpened = "False", isArchived = "False" })">@Model.Stories.Count(row => !row.IsOpened)</a>
            </td>
            <td class="number">
                <a href="@Url.Action("List", "Story", new { isOpened = "True", isArchived = "False" })">@Model.Stories.Count(row => row.IsOpened)</a>
            </td>
            <td class="number">@Model.Stories.Where(row => row.IsOpened).Sum(row => row.Duration)
            </td>
        </tr>
    </tfoot>
</table>
<script type="text/javascript">

    $("table.users tr[data-active='False']").hide();

    $(".filter a").click(function (e) {
        e.preventDefault();
        $(".filter li").removeClass("selected");
        $(this).parent("li").addClass("selected");
        $("table.users tr").hide();
        switch ($(this).data("filter")) {
            case "Active":
                $("table.users tr[data-active='True']").show();
                break;
            case "Inactive":
                $("table.users tr[data-active='False'][data-archived='False']").show();
                break;
            case "Archived":
                $("table.users tr[data-archived='True']").show();
                break;
        }
    });

</script>
