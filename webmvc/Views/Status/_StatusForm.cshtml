@model Epiworx.WebMvc.Models.StatusFormModel
@using Epiworx.WebMvc.Helpers
<fieldset>
    <legend>Status</legend>
    <label for="Name">
        Name</label>
    <input type="text" id="Name" name="Name" value="@Model.Status.Name" class="big" />
    <label for="Description">
        Description</label>
    <input type="text" id="Description" name="Description" value="@Model.Status.Description" />
    <label for="Ordinal">
        Step</label>
    <input type="text" id="Ordinal" name="Ordinal" value="@Model.Status.Ordinal" class="number"/>
    <label for="IsActive">
        <input type="checkbox" id="IsActive" name="IsActive" @Html.ToChecked(Model.Status.IsActive)/>This
        status is active</label>
    <label for="IsArchived">
        <input type="checkbox" id="IsArchived" name="IsArchived" @Html.ToChecked(Model.Status.IsArchived)/>This
        status is archived</label>
    <label for="IsCompleted">
        <input type="checkbox" id="IsCompleted" name="IsCompleted" @Html.ToChecked(Model.Status.IsCompleted)/>This
        status completes as story</label>
    <label for="IsStarted">
        <input type="checkbox" id="IsStarted" name="IsStarted" @Html.ToChecked(Model.Status.IsStarted)/>This
        status starts a story</label>
</fieldset>