@model Epiworx.WebMvc.Models.HourSummaryByDateListModel
@using Epiworx.WebMvc.Helpers
<div class="part">
    <div class="wrapper">
        <div class="hgroup">
            <img src="@Url.Content("~/Content/calendar.png")" />
            <h3>
                Hours for Last 8 Weeks</h3>
        </div>
        <table>
            <thead>
                <tr>
                    <th>
                        Date
                    </th>
                    <th class="number">
                        Hours
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var hour in Model.Hours)
                { 
                    <tr>
                        <td>@hour.StartDate.ToString("MMM d")
                        </td>
                        <td class="number">@Html.ActionLink(hour.Duration.ToString("F2"), "Index", "Hour", new { userId = Model.User.UserId, dateFrom = hour.StartDate.ToShortDateString(), dateTo = hour.EndDate.ToShortDateString() }, null)
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td>
                        Total
                    </td>
                    <td class="number">@Model.Hours.Sum(hour => hour.Duration).ToString("F2")
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
