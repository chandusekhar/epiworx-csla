@model Epiworx.WebMvc.Models.StoryListModel
<div class="hgroup">
    <img src="@Url.Content("~/Content/story.png")" alt="Story"/>
    <h2>
        Stories</h2>
</div>
@foreach (var status in Model.Statuses)
{
    if (Model.Stories.Any(row => row.StatusId == status.StatusId))
    {
    <h3>@status.Name</h3>
    <ul class="stories">
        @foreach (var story in Model.Stories.Where(row => row.StatusId == status.StatusId))
        {
            <li>
                <strong>@story.StoryId</strong>
                <p>
                    <span class="assignment">@story.AssignedToName</span>
                    <div class="clip"><a href="@Url.Action("Details", "Story", new { id = story.StoryId})" title="@story.Description">@story.Description</a></div>
                    <span class="date">by <em>@story.CreatedByName</em> @story.CreatedDate.ToString("MMMM d, yyyy")</span></p>
            </li> 
        }
    </ul>
    }
}
