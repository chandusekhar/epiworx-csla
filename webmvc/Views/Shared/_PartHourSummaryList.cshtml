@model Epiworx.WebMvc.Models.HourSummaryListModel
@using Epiworx.WebMvc.Helpers
<script src="@Url.Content("~/Scripts/jquery.sparkline.min.js")" type="text/javascript"></script>
<div class="part">
    <div class="wrapper">
        <div class="hgroup">
            <img src="@Url.Content("~/Content/hour.png")" />
            <h3>
                Hour Goals</h3>
        </div>
        <ul>
            @foreach (var summary in Model.Hours)
            { 
                <li class="bullet-graph"><a href="">@summary.Percentage%</a>
                    <h4>@summary.Name</h4>
                    <span class="graph">@summary.Value,@summary.HighValue,@summary.HighValue,@summary.NormalValue,@summary.LowValue</span>
                </li>
            }
        </ul>
    </div>
</div>
<script type="text/javascript">
    $(".bullet-graph .graph").sparkline("html", { type: "bullet", height: "30px", width: "300px", performanceColor: "#000", rangeColors: ["#E9E9E9", "#C2C2C2", "#A8A8A8"], targetColor: "#CC0000" });
</script>
