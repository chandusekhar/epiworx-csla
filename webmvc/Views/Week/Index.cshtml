@model Epiworx.WebMvc.Models.WeekListModel
@using Epiworx.WebMvc.Helpers
<div class="hgroup">
    <h2>
        Weeks</h2>
</div>
<table>
    <thead>
        <tr>
            <th style="width: 100px;">
                Period
            </th>
            <th style="width: 150px;">
                Start on
            </th>
            <th>
                End on
            </th>
        </tr>
    </thead>
    <tbody>
        @{      
            var currentPeriod = 0;
        }
        @foreach (var week in Model.Weeks)
        {
            <tr>
                <td>
                    @if (currentPeriod != week.Period)
                    { 
                        <text>@week.Period</text> 
                        currentPeriod = week.Period;
                    }
                    else
                    {  
                        <text>&nbsp;</text>
                    }
                </td>
                <td>@Html.ActionLink(week.StartDate.ToShortDateString(), "Edit", new { id = week.WeekId })
                </td>
                <td>@week.EndDate.ToShortDateString()
                </td>
            </tr>
        }
    </tbody>
</table>
@section SideBar
{
    @Html.Partial("_PartActionItemList")
    @Html.Partial("_PartYearList")
}
