@model Epiworx.WebMvc.Models.HomeIndexModel
@using Epiworx.WebMvc.Helpers
<script src="@Url.Content("~/Scripts/jquery.sparkline.min.js")" type="text/javascript"></script>
<div class="part">
    <div class="wrapper">
        <h3>
            Your Hour Goals</h3>
        <ul>
            @foreach (var summary in Model.HourSummaries)
            { 
                <li class="bullet-graph">
                    <a href="">@summary.Percentage%</a>
                    <h4>@summary.Name</h4>
                    <span class="graph">@summary.Value,@summary.HighValue,@summary.HighValue,@summary.NormalValue,@summary.LowValue</span>
                </li>
            }
        </ul>
    </div>
</div>
<script type="text/javascript">
    $(".bullet-graph .graph").sparkline("html", { type: "bullet", height: "30px", width: "300px" });
</script>
