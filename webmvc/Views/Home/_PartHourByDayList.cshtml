@model Epiworx.WebMvc.Models.HomeIndexModel
<div class="part">
    <div class="wrapper">
        <h3>
            Your Hours for The Week</h3>
        <table>
            <thead>
                <tr>
                    <th>
                        Date
                    </th>
                    <th class="number">
                        Hours
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var hourSummaryByDate in Model.HoursForCurrentWeek)
                { 
                    <tr>
                        <td>@hourSummaryByDate.StartDate.ToString("ddd d")</td>
                             <td class="number">@Html.ActionLink(hourSummaryByDate.Duration.ToString("F2"), "Index", "Hour", new { userId = Model.User.UserId, dateFrom = hourSummaryByDate.StartDate.ToShortDateString(), dateTo = hourSummaryByDate.EndDate.ToShortDateString() }, null)
                        </td>
               </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td>
                        Total
                    </td>
                    <td class="number">@Model.HoursForCurrentWeek.Sum(hourSummaryByDate => hourSummaryByDate.Duration).ToString("F2")
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
