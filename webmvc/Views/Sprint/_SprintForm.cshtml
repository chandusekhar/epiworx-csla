@model Epiworx.WebMvc.Models.SprintFormModel
@using Epiworx.WebMvc.Helpers
<fieldset>
    <legend>Sprint</legend>
    <label for="Name">
        Name</label>
    <input type="text" id="Name" name="Name" value="@Model.Sprint.Name" class="big" />
    <p>
        <label>
            Project</label>
        <span class="big">@Model.Sprint.ProjectName</span></p>
    <label for="Description">
        Description</label>
    <input type="text" id="Description" name="Description" value="@Model.Sprint.Description" />
    <label for="EstimatedCompletedDate">
        Estimated Completed On</label>
    <input type="text" id="EstimatedCompletedDate" name="EstimatedCompletedDate" value="@Model.Sprint.EstimatedCompletedDate.ToShortDateString()" class="date" />
    <label for="EstimatedDuration">
        Estimated Duration</label>
    <input type="text" id="EstimatedDuration" name="EstimatedDuration" value="@Model.Sprint.EstimatedDuration" class="number" />
    <label for="IsCompleted">
        <input type="checkbox" id="IsCompleted" name="IsCompleted" @Html.ToChecked(Model.Sprint.IsCompleted)/>This
        sprint is completed</label>
    <label for="CompletedDate">
        Completed On</label>
    <input type="text" id="CompletedDate" name="CompletedDate" value="@Model.Sprint.CompletedDate.ToShortDateString()" class="date" />
    <label for="IsActive">
        <input type="checkbox" id="IsActive" name="IsActive" @Html.ToChecked(Model.Sprint.IsActive)/>This
        sprint is active</label>
    <label for="IsArchived">
        <input type="checkbox" id="IsArchived" name="IsArchived" @Html.ToChecked(Model.Sprint.IsArchived)/>This
        sprint is archived</label>
</fieldset>
