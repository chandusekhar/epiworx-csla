@model Epiworx.WebMvc.Models.StoryListModel
@using Epiworx.WebMvc.Helpers
<div class="hgroup">
    <h2>
        Stories</h2>
</div>
<table>
    <thead>
        <tr>
            <th style="width: 80px">
                No.
            </th>
            <th style="width: 200px">
                Project
            </th>
            <th style="width: 150px">
                Status
            </th>
            <th>
                Description
            </th>
            <th class="number">
                Duration
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var story in Model.Stories)
        { 
            <tr>
                <td>
                    <input type="checkbox" id="StoryId" name="StoryId" value="@story.StoryId" />@Html.ActionLink(story.StoryId.ToString(), "Details", new { id = story.StoryId })
                </td>
                <td>@story.ProjectName
                </td>
                <td>@story.StatusName
                </td>
                <td>@story.Description
                </td>
                <td class="number">@story.Duration.ToString("F2")
                </td>
            </tr>
        }
    </tbody>
</table>
